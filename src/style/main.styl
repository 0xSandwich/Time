@font-face
{
    font-family: 'avenirBook';
    src: url('../fonts/AvenirLTStd-Book.otf') format('truetype');
}
@font-face
{
    font-family: 'avenirRoman';
    src: url('../fonts/AvenirLTStd-Roman.otf') format('truetype');
}


*
    padding 0
    margin 0
    --light-color #e3e7f8
    --medium-color #6b77a3
    --dark-color #192a65
body 
    overflow hidden
    
// 
//HOME 
//
.home
    width 100%
    height 100%
    position absolute
    z-index 2
    background linear-gradient(to bottom, var(--light-color), var(--medium-color))
    display flex
    justify-content center

    transition all 2s ease-out 

    
    // TITLE + START
    .title-home
        margin-top 12%   
        z-index 4

    .title-home h1
        top 295px
        font-size 6em
        text-align center
        font-family 'Roboto Condensed'
        text-transform uppercase
        letter-spacing 0.25em
        background linear-gradient(to bottom, var(--dark-color) 30%, var(--light-color))
        -webkit-background-clip text
        -webkit-text-fill-color transparent

    .title-home p#start
        text-align center
        font-family 'Roboto Condensed'
        text-transform uppercase
        margin-top 23%
        color white
        font-size 1.5em
        letter-spacing 0.2em
        cursor pointer

    .title-home #start-container div.line
        position absolute
        left 50%
        background-color white
        height 2px
        width 2px
        cursor pointer
        opacity 0

        transition transform 0.7s ease-in-out
        will-change transform, opacity

    .title-home #start-container:hover div.line
        opacity 1
        transform translateX(-3px)scaleX(82)


    // CLOCK
    .clock
        z-index 4
    .clock .hours,
    .clock .minutes
        position absolute 
        top 50%
        left 50%
   
    .clock .hours
        transform rotate(320deg)
        will-change transform 

        animation-name hours-animation
        animation-duration 2s
        animation-play-state paused
        animation-timing-function cubic-bezier(0, 0, 0, 1.10)
        animation-iteration-count 1
        animation-fill-mode forwards

    @keyframes hours-animation 
    {
        0% {transform :rotate(-40deg)}
        100% {transform: rotate(-1800deg)}
    }

    .clock .needle
        position absolute

    .clock .minutes .needle
        width 10px
        height 333px
        left -4px
        bottom -4px
        background rgba(255, 255, 255, 0.8)

    .clock .hours .needle
        width 10px
        height 133px
        left -4px
        bottom -4px
        background var(--dark-color)
        
    //IMAGES
    div#romain-numbers
        position absolute
        top 3%
        z-index 3
        opacity 0.2
    div#triangle
        position absolute
        top 7%
        z-index 3
        opacity 0.5
    div#clock-circle div
        position absolute 
        top 3%
        left 26.1%
        width 914px
        height 914px
        border-radius 50%
        background-color rgba(255, 255, 255, 0.05)


// 
//TIMELINE
//
#timeline
    position absolute
    width 360px
    height 150px
    top 90%
    left calc(50% - 175px)
    z-index 1
    

    #line
        //width 350px
        width 1px
        height 2px
        position absolute
        top 8px
        background-color white
        will-change transform
        transition transform 1.8s ease-out
        transform-origin 0 0

    #dates
        display flex 
        justify-content space-between

    #dates .date
        cursor pointer

    #dates .date.candle,
    #dates .date.pendulum
        opacity 0
        pointer-events none
        transition opacity 2s ease-out

    #dates .date.sundial .text-description
        position absolute 
        transform translateX(-20px) translateY(-60px)

    #dates .date.candle .text-description
        position absolute 
        transform translateX(-18px) translateY(-60px)

    #dates .date.pendulum .text-description
        position absolute 
        transform translateX(-27px) translateY(-60px)

    #dates .date .text-description p
        text-transform uppercase
        color white
        font-family 'Roboto Condensed'
        letter-spacing 0.15em
        text-align center
        font-size 0.8em

    #dates .date .circle
        width 16px
        height 16px
        border-radius 50%
        background-color white
        will-change transform 
        transition transform 0.4s ease-in-out

        &:hover
            transform scaleX(1.2) scaleY(1.2)

        &::after
            content ""
            position absolute
            width 32px
            height 32px
            transform translateX(-9px) translateY(-9px)
            border-radius 50%
            border 1px solid white

    #dates .date .arrow-line
        width 2px
        height 32px
        position absolute
        transform translateX(7px) translateY(-45px)
        background-color white

        &::after
            content ""
            position absolute
            width 5px
            height 5px
            transform translateX(-1.5px)
            border-radius 50%
            background-color white
        


//
// INFO OF MUSEUM
//
#info
    position: absolute
    width: 400px
    right: 20px
    top 20%
    z-index 1
    font-family 'avenirBook'
    backdrop-filter: blur(20px)
    
    #next-btn
        color white
        padding 15px
        cursor pointer
        #next-btn-text
            color white 
            font-size 0.9em 
            width: 100%
            text-align right
        #underLine
            margin-left: auto
            background: white
            width: 7.6vw
            height: 0.3vh
    #title
        padding: 0
        margin: 5%
        text-transform uppercase
        color white
        font-size 1.5em
    #description
        padding: 0
        margin: 5%
        color white
        font-size 0.9em 
        line-height: 1.5
    #questions
        background: white
        color: #577FA2
        padding: 4%
        margin-bottom: 2%
        #question
            text-transform uppercase
            font-size 1em
            padding: 0
            margin: 5%
            line-height: 1.6
        #answer
            font-size 0.9em 
            line-height: 1.5
            padding: 0
            margin: 5%